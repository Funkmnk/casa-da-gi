---
import Card from './Card.astro';

const galleryItems = [
  { image: './images/Buffet1.png?height=400&width=400', title: 'Feijoada', category: '' },
  { image: './images/Buffet3.png?height=400&width=400', title: 'Moqueca', category: '' },
  { image: './images/Buffet2.png?height=400&width=400', title: 'Picanha Grelhada', category: '' },
  { image: './images/Buffet4.png?height=400&width=400', title: 'Brigadeiro', category: '' },
  { image: './images/Salada.jpg?height=400&width=400', title: 'Saladas Frescas', category: '' },
  { image: './images/Caipirinha.jpg?height=400&width=400', title: 'Caipirinhas', category: '' },
  { image: './images/Suco.jpg?height=400&width=400', title: 'Sucos Naturais', category: '' },
  { image: './images/Buffet5.png?height=400&width=400', title: 'Massas Artesanais', category: '' },
  { image: './images/Buffet6.png?height=400&width=400', title: 'Legumes Grelhados', category: '' },
  { image: './images/Bolo.jpg?height=400&width=400', title: 'Bolo de Chocolate', category: '' },
  { image: './images/Buffet7.png?height=400&width=400', title: 'Risoto de Frutos do Mar', category: '' },
  { image: './images/Servindo.png?height=400&width=400', title: 'Tiramisu', category: '' },
];
---

<section id="galeria" class="gallery">
  <div class="container">
    <div class="gallery-header">
      <span class="subtitle">Nosso cardápio</span>
      <h2>Delícias que preparamos</h2>
      <p>Explore nossa seleção de pratos preparados com ingredientes frescos e muito amor!</p>
    </div>

    <div class="gallery-grid">
      {galleryItems.map((item) => (
        <Card image={item.image} title={item.title} category={item.category} />
      ))}
    </div>
  </div>
</section>

<style>
  .gallery {
    padding: 100px 0;
    background: var(--branco);
  }

  .gallery-header {
    text-align: center;
    margin-bottom: 60px;
  }

  .gallery-header .subtitle {
    display: inline-block;
    color: var(--vermelho-carmesim);
    font-size: 16px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1.5px;
    margin-bottom: 12px;
  }

  .gallery-header h2 {
    font-size: 46px;
    font-weight: 800;
    color: var(--texto-escuro);
    margin-bottom: 16px;
  }

  .gallery-header p {
    font-size: 18px;
    color: var(--texto-claro);
    max-width: 600px;
    margin: 0 auto;
  }

  .gallery-grid {
    display: grid;
    grid-template-columns: repeat(6, 1fr);
    gap: 20px;
  }

  @media (max-width: 1200px) {
    .gallery-grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  @media (max-width: 1024px) {
    .gallery-grid {
      grid-template-columns: repeat(3, 1fr);
    }

    .gallery-header h2 {
      font-size: 36px;
    }
  }

  @media (max-width: 768px) {
    .gallery {
      padding: 60px 0;
    }

    .gallery-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 15px;
    }

    .gallery-header h2 {
      font-size: 32px;
    }

    .gallery-header p {
      font-size: 16px;
    }
  }

  @media (max-width: 480px) {
    .gallery-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
