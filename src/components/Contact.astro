---
import Button from './Button.astro';
---

<section id="contato" class="contact">
  <div class="container">
    <div class="contact-header">
      <span class="subtitle">Entre em Contato</span>
      <h2>Visite-nos ou Faça sua Reserva</h2>
    </div>

    <div class="map-container">
      <iframe
        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3657.1976!2d-46.6333!3d-23.5505!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zMjPCsDMzJzAxLjgiUyA0NsKwMzcnNTkuOSJX!5e0!3m2!1spt-BR!2sbr!4v1234567890"
        width="100%"
        height="100%"
        style="border:0;"
        allowfullscreen=""
        loading="lazy"
        referrerpolicy="no-referrer-when-downgrade"
        title="Localização Casa da Gi"
      ></iframe>
    </div>

    <div class="contact-content">
      <div class="contact-info">
        <div class="info-item">
          <div class="info-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
              <circle cx="12" cy="10" r="3"></circle>
            </svg>
          </div>
          <div>
            <h3>Endereço</h3>
            <p>Rua das Delícias, 123<br />Centro, São Paulo - SP</p>
          </div>
        </div>

        <div class="info-item">
          <div class="info-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
            </svg>
          </div>
          <div>
            <h3>Telefone</h3>
            <p>(11) 98765-4321<br />(11) 3456-7890</p>
          </div>
        </div>

        <div class="info-item">
          <div class="info-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
              <line x1="16" y1="2" x2="16" y2="6"></line>
              <line x1="8" y1="2" x2="8" y2="6"></line>
              <line x1="3" y1="10" x2="21" y2="10"></line>
            </svg>
          </div>
          <div>
            <h3>Horário</h3>
            <p>Seg - Sex: 11h - 23h<br />Sáb - Dom: 12h - 00h</p>
          </div>
        </div>
      </div>

      <form class="contact-form">
        <h3>Faça sua Reserva</h3>
        <div class="form-row">
          <input type="text" placeholder="Seu Nome" required />
          <input type="email" placeholder="Seu E-mail" required />
        </div>
        <div class="form-row">
          <input type="tel" placeholder="Telefone" required />
          <input type="date" placeholder="Data" required />
        </div>
        <div class="form-row">
          <input type="time" placeholder="Horário" required />
          <input type="number" placeholder="Número de Pessoas" min="1" required />
        </div>
        <textarea placeholder="Mensagem (opcional)" rows="4"></textarea>
        <Button variant="primary" class="button-large">Confirmar Reserva</Button>
      </form>
    </div>
  </div>
</section>

<style>
  .contact {
    padding: 100px 0;
    background: var(--branco-nevoa);
  }

  .contact-header {
    text-align: center;
    margin-bottom: 60px;
  }

  .contact-header .subtitle {
    display: inline-block;
    color: var(--vermelho-carmesim);
    font-size: 16px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1.5px;
    margin-bottom: 12px;
  }

  .contact-header h2 {
    font-size: 46px;
    font-weight: 800;
    color: var(--texto-escuro);
  }

  .map-container {
    width: 90%;
    max-width: 1100px;
    height: 500px;
    margin: 0 auto 80px;
    border-radius: 25px;
    overflow: hidden;
    box-shadow: var(--shadow-lg);
  }

  .contact-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
  }

  .contact-info {
    display: flex;
    flex-direction: column;
    gap: 40px;
  }

  .info-item {
    display: flex;
    gap: 20px;
    align-items: flex-start;
  }

  .info-icon {
    width: 50px;
    height: 50px;
    background: var(--ouro-mostarda);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .info-icon svg {
    color: var(--texto-escuro);
  }

  .info-item h3 {
    font-size: 20px;
    font-weight: 700;
    color: var(--texto-escuro);
    margin-bottom: 8px;
  }

  .info-item p {
    font-size: 16px;
    color: var(--texto-claro);
    line-height: 1.6;
  }

  .contact-form {
    background: var(--branco);
    padding: 40px;
    border-radius: 20px;
    box-shadow: var(--shadow-md);
  }

  .contact-form h3 {
    font-size: 24px;
    font-weight: 700;
    color: var(--texto-escuro);
    margin-bottom: 30px;
  }

  .form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px;
    margin-bottom: 20px;
  }

  .contact-form input,
  .contact-form textarea {
    width: 100%;
    padding: 15px 20px;
    border: 2px solid var(--vinho-tinto);
    border-radius: 10px;
    font-size: 16px;
    font-family: inherit;
    transition: var(--transition);
  }

  .contact-form input:focus,
  .contact-form textarea:focus {
    outline: none;
    border-color: var(--vermelho-carmesim);
  }

  .contact-form textarea {
    resize: vertical;
    margin-bottom: 20px;
  }

  .contact-form :global(.button) {
    width: 100%;
  }

  @media (max-width: 1024px) {
    .contact-content {
      grid-template-columns: 1fr;
      gap: 50px;
    }

    .contact-header h2 {
      font-size: 36px;
    }
  }

  @media (max-width: 768px) {
    .contact {
      padding: 60px 0;
    }

    .map-container {
      height: 350px;
      margin-bottom: 50px;
    }

    .contact-header h2 {
      font-size: 32px;
    }

    .form-row {
      grid-template-columns: 1fr;
    }

    .contact-form {
      padding: 30px 20px;
    }
  }
</style>
